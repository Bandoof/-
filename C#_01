
using System;

class Program {
  static void Main() 
  {
    Console.Write("Введіть ціну зошита:");
    double x = double.Parse(Console.ReadLine());

    Console.Write("Введіть ціну ручки:");
    double y = double.Parse(Console.ReadLine());

    Console.Write("Введіть кількість зошита: ");
    int n = int.Parse(Console.ReadLine());

    Console.Write("Введіть кількість ручки: ");
    int m = int.Parse(Console.ReadLine());

     double sum = (x * n) + (y * m);

    Console.WriteLine("Загальна сума: " + sum);
  }
}

